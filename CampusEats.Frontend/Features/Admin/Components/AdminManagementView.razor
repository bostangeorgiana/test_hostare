@using CampusEats.Frontend.Features.Admin.Models
@using CampusEats.Frontend.Models

<div class="space-y-3">
    @foreach (var a in Admins)
    {
        <div class="p-3 border rounded flex justify-between">
            <div>
                <b>@a.Name</b> — @a.Email
            </div>

            <button class="px-3 py-1 bg-red-600 text-white rounded"
                    @onclick="() => OnDeleteAdmin.InvokeAsync(a.Id)">
                Delete
            </button>
        </div>
    }
</div>

@code {
    [Parameter] public List<AdminDto> Admins { get; set; } = new();
    [Parameter] public EventCallback OnCreateAdmin { get; set; }
    [Parameter] public EventCallback<int> OnDeleteAdmin { get; set; }
}