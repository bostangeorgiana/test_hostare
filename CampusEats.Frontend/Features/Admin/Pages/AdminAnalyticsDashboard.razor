@code {
    bool isAuthenticated = false;
    bool isAdmin = false;
    bool isLoading = true;
    string selectedPeriod = "all";

    AdminApi.PaymentAnalyticsOverview? overview;
    List<AdminApi.DailyRevenueData> dailyRevenue = new();
    List<AdminApi.MonthlyRevenueData> monthlyRevenue = new();
    List<AdminApi.PaymentTransaction> transactions = new();
    
    int transactionsTotal = 0;
    int transactionsPage = 1;
    int transactionsPageSize = 20;
    bool transactionsHasNextPage = false;
    bool transactionsHasPreviousPage = false;

    protected override async Task OnInitializedAsync()
    {
        await CheckAuthentication();
        
        if (isAuthenticated && isAdmin)
        {
            await LoadAllData();
        }
    }

    async Task CheckAuthentication()
    {
        try
        {
            var token = await TokenService.GetTokenAsync();
            if (string.IsNullOrEmpty(token))
            {
                Navigation.NavigateTo("/auth/login", forceLoad: true);
                return;
            }

            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;

            if (user.Identity?.IsAuthenticated == true)
            {
                isAuthenticated = true;
                var roleClaim = user.FindFirst(ClaimTypes.Role);
                isAdmin = roleClaim?.Value == "admin";

                if (!isAdmin)
                {
                    Navigation.NavigateTo("/admin/dashboard", forceLoad: true);
                }
            }
            else
            {
                Navigation.NavigateTo("/auth/login", forceLoad: true);
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"❌ Authentication check failed: {ex.Message}");
            Navigation.NavigateTo("/auth/login", forceLoad: true);
        }
    }

    async Task LoadAllData()
    {
        try
        {
            isLoading = true;
            StateHasChanged();

            overview = await Api.GetPaymentAnalyticsOverview(selectedPeriod);
            dailyRevenue = await Api.GetDailyRevenue();
            monthlyRevenue = await Api.GetMonthlyRevenue();
            
            var transactionsResponse = await Api.GetPaymentTransactions(transactionsPage, transactionsPageSize);
            transactions = transactionsResponse.Items;
            transactionsTotal = transactionsResponse.TotalCount;
            transactionsHasNextPage = transactionsResponse.HasNextPage;
            transactionsHasPreviousPage = transactionsResponse.HasPreviousPage;
        }
        catch (UnauthorizedAccessException)
        {
            await HandleLogout();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"❌ Error loading analytics: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    async Task LoadDataForPeriod(string period)
    {
        selectedPeriod = period;
        await LoadAllData();
    }

    async Task TransactionsNextPage()
    {
        if (transactionsHasNextPage)
        {
            transactionsPage++;
            await LoadTransactions();
        }
    }

    async Task TransactionsPreviousPage()
    {
        if (transactionsHasPreviousPage)
        {
            transactionsPage--;
            await LoadTransactions();
        }
    }

    async Task LoadTransactions()
    {
        try
        {
            var response = await Api.GetPaymentTransactions(transactionsPage, transactionsPageSize);
            transactions = response.Items;
            transactionsTotal = response.TotalCount;
            transactionsHasNextPage = response.HasNextPage;
            transactionsHasPreviousPage = response.HasPreviousPage;
            StateHasChanged();
        }
        catch (UnauthorizedAccessException)
        {
            await HandleLogout();
        }
    }

    string GetPeriodButtonClass(string period)
    {
        var baseClass = "px-4 py-2 rounded-lg text-sm font-medium transition-colors";
        return period == selectedPeriod
            ? $"{baseClass} bg-emerald-600 text-white"
            : $"{baseClass} bg-white border border-gray-300 text-gray-700 hover:bg-gray-50";
    }

    string GetStatusBadgeClass(string status)
    {
        return status.ToLower() switch
        {
            "succeeded" => "px-3 py-1 text-xs font-medium rounded-full bg-emerald-100 text-emerald-700",
            "pending" => "px-3 py-1 text-xs font-medium rounded-full bg-yellow-100 text-yellow-700",
            "failed" => "px-3 py-1 text-xs font-medium rounded-full bg-red-100 text-red-700",
            _ => "px-3 py-1 text-xs font-medium rounded-full bg-gray-100 text-gray-700"
        };
    }

    string GetStatusText(string status)
    {
        return status.ToLower() switch
        {
            "succeeded" => "Succeeded",
            "pending" => "Pending",
            "failed" => "Failed",
            _ => status
        };
    }

    async Task HandleLogout()
    {
        await TokenService.RemoveTokenAsync();
        Navigation.NavigateTo("/auth/login", forceLoad: true);
    }
}
