@code {
    int activeTab = 0;
    bool isAuthenticated = false;
    bool isAdmin = false;
    
    List<StudentRequest> studentRequests = new();
    List<AdminDto> admins = new();
    List<KitchenStaffUser> staff = new();
    int todayOrdersCount = 0;
    
    List<Students.GetStudentsAdmin> activeStudents = new();
    int studentsTotal = 0;
    int studentsPage = 1;
    int studentsPageSize = 10;
    int studentsTotalPages = 0;
    bool studentsHasNextPage = false;
    bool studentsHasPreviousPage = false;
    bool isLoadingStudents = false;
    
    bool showCreateAdminModal = false;
    bool showCreateStaffModal = false;
    
    // === PAYMENT ANALYTICS ===
    AdminApi.PaymentAnalyticsOverview? paymentOverview;

    List<AdminApi.DailyRevenueData> dailyRevenue = new();
    List<AdminApi.MonthlyRevenueData> monthlyRevenue = new();

    List<AdminApi.PaymentTransaction> transactions = new();
    int transactionsTotal = 0;
    int transactionsPage = 1;
    int transactionsPageSize = 20;
    bool transactionsHasNext = false;
    bool transactionsHasPrevious = false;

    bool isLoadingAnalytics = false;
    string selectedPeriod = "all";
    
    async Task LoadPaymentAnalytics()
    {
        try
        {
            isLoadingAnalytics = true;
            StateHasChanged();

            paymentOverview = await Api.GetPaymentAnalyticsOverview(selectedPeriod);
            dailyRevenue = await Api.GetDailyRevenue();
            monthlyRevenue = await Api.GetMonthlyRevenue();

            var tx = await Api.GetPaymentTransactions(
                transactionsPage,
                transactionsPageSize
            );

            transactions = tx.Items;
            transactionsTotal = tx.TotalCount;
            transactionsHasNext = tx.HasNextPage;
            transactionsHasPrevious = tx.HasPreviousPage;
        }
        catch (UnauthorizedAccessException)
        {
            await HandleLogout();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"❌ Analytics error: {ex.Message}");
        }
        finally
        {
            isLoadingAnalytics = false;
            StateHasChanged();
        }
    }


    protected override async Task OnInitializedAsync()
    {
        await CheckAuthentication();
        
        if (isAuthenticated && isAdmin)
        {
            await LoadAll();
        }
    }

    async Task CheckAuthentication()
    {
        try
        {
            // Verifică dacă există token
            var token = await TokenService.GetTokenAsync();

            if (string.IsNullOrEmpty(token))
            {
                Console.WriteLine("❌ No token found, redirecting to login");
                Navigation.NavigateTo("/auth/login", forceLoad: true);
                return;
            }

            // Verifică rolul utilizatorului din claims
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;

            if (user.Identity?.IsAuthenticated == true)
            {
                isAuthenticated = true;
                
                // Verifică dacă utilizatorul are rolul de admin
                var roleClaim = user.FindFirst(ClaimTypes.Role);
                isAdmin = roleClaim?.Value == "admin";

                if (!isAdmin)
                {
                    Console.WriteLine("❌ User is not an admin");
                    return;
                }

                Console.WriteLine("✅ Admin authenticated successfully");
            }
            else
            {
                Console.WriteLine("❌ User is not authenticated");
                Navigation.NavigateTo("/auth/login", forceLoad: true);
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"❌ Authentication check failed: {ex.Message}");
            Navigation.NavigateTo("/auth/login", forceLoad: true);
        }
    }

    string GetNavButtonClass(int i)
    {
        var baseClasses = "w-full flex items-center gap-3 px-4 py-3 rounded-lg font-medium transition-colors text-sm mb-2 text-left";
        return i == activeTab
            ? $"{baseClasses} bg-emerald-600 text-white"
            : $"{baseClasses} text-gray-600 hover:bg-gray-100";
    }

    async Task SetTab(int i)
    {
        activeTab = i;

        if (i == 2 && todayOrdersCount == 0)
        {
            todayOrdersCount = await Api.GetTodayOrdersCount();
        }

        if (i == 3 && activeStudents.Count == 0)
            await LoadActiveStudents();

        if (i == 4 && paymentOverview == null)
            await LoadPaymentAnalytics();

        StateHasChanged();
    }


