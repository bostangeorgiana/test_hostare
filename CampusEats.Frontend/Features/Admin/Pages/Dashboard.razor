    async Task LoadActiveStudents()
    {
        try
        {
            isLoadingStudents = true;
            StateHasChanged();

            var response = await Api.GetStudentsList(studentsPage, studentsPageSize);
            
            activeStudents = response.Items;
            studentsTotal = response.TotalCount;
            studentsTotalPages = response.TotalPages;
            studentsHasNextPage = response.HasNextPage;
            studentsHasPreviousPage = response.HasPreviousPage;
        }
        catch (UnauthorizedAccessException)
        {
            await HandleLogout();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"❌ Error loading students: {ex.Message}");
        }
        finally
        {
            isLoadingStudents = false;
            StateHasChanged();
        }
    }

