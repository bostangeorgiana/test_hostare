@page "/auth/login"
@layout EmptyLayout
@using CampusEats.Frontend.Models
@using CampusEats.Frontend.Services.Auth
@inject IAuthApi AuthApi
@inject AuthStateService AuthState
@inject NavigationManager Nav
@inject CustomAuthStateProvider AuthProvider
@inject HttpClient Http

<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">

<style>
    * {
        font-family: 'Montserrat', sans-serif;
    }
</style>

<div class="flex min-h-screen">
    <!-- Left Side - Branding -->
    <div class="hidden lg:flex lg:w-1/2 relative overflow-hidden">
        <!-- Background Image -->
        <div class="absolute inset-0">
            <img src="/images/login.jpg" alt="CampusEats" class="w-full h-full object-cover" />
            <!-- Dark overlay for better text readability -->
            <div class="absolute inset-0 bg-black/60"></div>
        </div>
        
        <!-- Content -->
        <div class="relative z-10 flex flex-col items-center justify-center w-full px-12 text-white">
            <div class="text-7xl mb-6 animate-bounce">🍴</div>
            <h1 class="text-5xl font-bold mb-4 tracking-tight">CampusEats</h1>
            <p class="text-lg font-light text-center max-w-md opacity-95">
                Your favorite campus meals, delivered fresh to your door
            </p>
        </div>
    </div>

    <!-- Right Side - Login Form -->
    <div class="flex-1 flex items-center justify-center px-6 py-12 bg-white">
        <div class="w-full max-w-md">
            <!-- Header -->
            <div class="mb-8">
                <h2 class="text-3xl font-semibold text-gray-900 mb-2">Welcome Back</h2>
                <p class="text-gray-600">Sign in to continue to CampusEats</p>
            </div>

            <!-- Error Message -->
            @if (ErrorMessage != null)
            {
                <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
                    <p class="text-sm text-red-800">@ErrorMessage</p>
                </div>
            }

            <!-- Form -->
            <div class="space-y-5">
                <!-- Email -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Email Address</label>
                    <input 
                        type="email" 
                        @bind="Model.Email"
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#2d8a66] focus:border-transparent outline-none transition"
                        placeholder="your.email@student.ro" />
                </div>

                <!-- Password -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Password</label>
                    <div class="relative">
                        <input 
                            type="@(showPassword ? "text" : "password")"
                            @bind="Model.Password"
                            class="w-full px-4 py-3 pr-12 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#2d8a66] focus:border-transparent outline-none transition"
                            placeholder="Enter your password" />
                        <button 
                            type="button"
                            @onclick="() => showPassword = !showPassword"
                            class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-500 hover:text-[#2d8a66] transition">
                            @if (showPassword)
                            {
                                <span class="text-xl">👁️</span>
                            }
                            else
                            {
                                <span class="text-xl">👁️‍🗨️</span>
                            }
                        </button>
                    </div>
                </div>

                <!-- Login Button -->
                <button 
                    @onclick="LoginAsync"
                    class="w-full bg-[#2d8a66] hover:bg-[#247556] text-white font-medium py-3 rounded-lg transition duration-200 shadow-sm hover:shadow-md">
                    Sign In
                </button>

                <!-- Divider -->
                <div class="relative my-6">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-gray-300"></div>
                    </div>
                    <div class="relative flex justify-center text-sm">
                        <span class="px-4 bg-white text-gray-500">Don't have an account?</span>
                    </div>
                </div>

                <!-- Register Link -->
                <a href="/auth/register" 
                   class="block w-full text-center py-3 border border-[#2d8a66] text-[#2d8a66] font-medium rounded-lg hover:bg-[#2d8a66] hover:text-white transition duration-200">
                    Create Account
                </a>
            </div>
        </div>
    </div>
</div>

@code {
    private LoginRequest Model { get; set; } = new();
    private string? ErrorMessage;
    private bool showPassword = false;

    private async Task LoginAsync()
    {
        ErrorMessage = null;

        try
        {
            var result = await AuthApi.Login(Model);

            if (result is null || string.IsNullOrWhiteSpace(result.AccessToken))
            {
                ErrorMessage = "Invalid email or password.";
                return;
            }
            
            await AuthApi.SaveToken(result.AccessToken);

            AuthState.SetUser(
                result.User.UserId,
                result.User.Role,
                result.User.Email
            );
            
            AuthProvider.MarkUserAsAuthenticated(result.AccessToken);

            // Ensure HttpClient sends the bearer token for subsequent requests (fix 401)
            try
            {
                Http.DefaultRequestHeaders.Authorization = new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", result.AccessToken);
            }
            catch { }
            //

            if (result.User.Role == "admin")
            {
                Nav.NavigateTo("/admin/dashboard");
            }
            else if (result.User.Role == "kitchen_staff")
            {
                Nav.NavigateTo("/kitchen_staff");
            }
            else
            {
                Nav.NavigateTo("/student/menu");
            }
        }
        catch (Exception ex)
        {
            var lower = (ex.Message ?? string.Empty).ToLowerInvariant();
            if (lower.Contains("unauthorized") || lower.Contains("invalid") || lower.Contains("password") || lower.Contains("email"))
            {
                ErrorMessage = "Invalid email or password.";
            }
            else
            {
                ErrorMessage = "Login failed. Please try again later.";
            }
        }
    }
}