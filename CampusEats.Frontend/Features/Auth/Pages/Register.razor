@page "/auth/register"
@layout EmptyLayout
@using CampusEats.Frontend.Models
@using CampusEats.Frontend.Services.Auth
@using System.ComponentModel.DataAnnotations
@using System.Linq
@inject IAuthApi AuthApi
@inject NavigationManager Nav

<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">

<style>
    * {
        font-family: 'Montserrat', sans-serif;
    }
</style>

<div class="flex min-h-screen">
    <!-- Left Side - Branding -->
    <div class="hidden lg:flex lg:w-1/2 relative overflow-hidden">
        <!-- Background Image -->
        <div class="absolute inset-0">
            <img src="/images/register.jpg" alt="CampusEats" class="w-full h-full object-cover" />
            <!-- Dark overlay for better text readability -->
            <div class="absolute inset-0 bg-black/60"></div>
        </div>
        
        <!-- Content -->
        <div class="relative z-10 flex flex-col items-center justify-center w-full px-12 text-white">
            <div class="text-7xl mb-6 animate-bounce">🍴</div>
            <h1 class="text-5xl font-bold mb-4 tracking-tight">CampusEats</h1>
            <p class="text-lg font-light text-center max-w-md opacity-95">
                Join thousands of students enjoying delicious meals delivered to campus
            </p>
        </div>
    </div>

    <!-- Right Side - Register Form -->
    <div class="flex-1 flex items-center justify-center px-6 py-12 bg-white overflow-y-auto">
        <div class="w-full max-w-md">
            <!-- Header -->
            <div class="mb-8">
                <h2 class="text-3xl font-semibold text-gray-900 mb-2">Create Account</h2>
                <p class="text-gray-600">Join CampusEats today</p>
            </div>

            <!-- Error Message -->
            @if (ErrorMessage is not null)
            {
                <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
                    <p class="text-sm text-red-800">@ErrorMessage</p>
                </div>
            }

            <!-- Form -->
            <div class="space-y-4">
                <!-- First Name -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">First Name</label>
                    <input 
                        type="text" 
                        @bind="Model.FirstName"
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#2d8a66] focus:border-transparent outline-none transition"
                        placeholder="John" />
                    @if (FieldErrors.TryGetValue(nameof(Model.FirstName), out var fnErrs) && fnErrs.Count > 0)
                    {
                        <div class="mt-1 space-y-1">
                            @foreach (var e in fnErrs) 
                            { 
                                <p class="text-xs text-red-600">@e</p>
                            }
                        </div>
                    }
                </div>

                <!-- Last Name -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Last Name</label>
                    <input 
                        type="text" 
                        @bind="Model.LastName"
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#2d8a66] focus:border-transparent outline-none transition"
                        placeholder="Doe" />
                    @if (FieldErrors.TryGetValue(nameof(Model.LastName), out var lnErrs) && lnErrs.Count > 0)
                    {
                        <div class="mt-1 space-y-1">
                            @foreach (var e in lnErrs) 
                            { 
                                <p class="text-xs text-red-600">@e</p>
                            }
                        </div>
                    }
                </div>

                <!-- Email -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Email Address</label>
                    <input 
                        type="email" 
                        @bind="Model.Email"
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#2d8a66] focus:border-transparent outline-none transition"
                        placeholder="your.email@student.ro" />
                    @if (FieldErrors.TryGetValue(nameof(Model.Email), out var emErrs) && emErrs.Count > 0)
                    {
                        <div class="mt-1 space-y-1">
                            @foreach (var e in emErrs) 
                            { 
                                <p class="text-xs text-red-600">@e</p>
                            }
                        </div>
                    }
                </div>

                <!-- Password -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Password</label>
                    <div class="relative">
                        <input 
                            type="@(showPassword ? "text" : "password")"
                            @bind="Model.Password"
                            class="w-full px-4 py-3 pr-12 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#2d8a66] focus:border-transparent outline-none transition"
                            placeholder="Create a strong password" />
                        <button 
                            type="button"
                            @onclick="TogglePasswordVisibility"
                            class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-500 hover:text-[#2d8a66] transition">
                            @if (showPassword)
                            {
                                <span class="text-xl">👁️</span>
                            }
                            else
                            {
                                <span class="text-xl">👁️‍🗨️</span>
                            }
                        </button>
                    </div>
                    @if (FieldErrors.TryGetValue(nameof(Model.Password), out var pwErrs) && pwErrs.Count > 0)
                    {
                        <div class="mt-1 space-y-1">
                            @foreach (var e in pwErrs) 
                            { 
                                <p class="text-xs text-red-600">@e</p>
                            }
                        </div>
                    }
                </div>

                <!-- Confirm Password -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Confirm Password</label>
                    <div class="relative">
                        <input 
                            type="@(showConfirmPassword ? "text" : "password")"
                            @bind="Model.ConfirmPassword"
                            class="w-full px-4 py-3 pr-12 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#2d8a66] focus:border-transparent outline-none transition"
                            placeholder="Confirm your password" />
                        <button 
                            type="button"
                            @onclick="ToggleConfirmPasswordVisibility"
                            class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-500 hover:text-[#2d8a66] transition">
                            @if (showConfirmPassword)
                            {
                                <span class="text-xl">👁️</span>
                            }
                            else
                            {
                                <span class="text-xl">👁️‍🗨️</span>
                            }
                        </button>
                    </div>
                    @if (FieldErrors.TryGetValue(nameof(Model.ConfirmPassword), out var cpwErrs) && cpwErrs.Count > 0)
                    {
                        <div class="mt-1 space-y-1">
                            @foreach (var e in cpwErrs) 
                            { 
                                <p class="text-xs text-red-600">@e</p>
                            }
                        </div>
                    }
                </div>

                <!-- Register Button -->
                <button 
                    @onclick="RegisterAsync"
                    class="w-full bg-[#2d8a66] hover:bg-[#247556] text-white font-medium py-3 rounded-lg transition duration-200 shadow-sm hover:shadow-md mt-6">
                    Create Account
                </button>

                <!-- Divider -->
                <div class="relative my-6">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-gray-300"></div>
                    </div>
                    <div class="relative flex justify-center text-sm">
                        <span class="px-4 bg-white text-gray-500">Already have an account?</span>
                    </div>
                </div>

                <!-- Login Link -->
                <a href="/auth/login" 
                   class="block w-full text-center py-3 border border-[#2d8a66] text-[#2d8a66] font-medium rounded-lg hover:bg-[#2d8a66] hover:text-white transition duration-200">
                    Sign In
                </a>
            </div>
        </div>
    </div>
</div>

@code {
    private RegisterRequest Model { get; set; } = new();
    private string? ErrorMessage;
    private Dictionary<string, List<string>> FieldErrors { get; set; } = new();
    private bool showPassword = false;
    private bool showConfirmPassword = false;

    private void TogglePasswordVisibility()
    {
        showPassword = !showPassword;
    }

    private void ToggleConfirmPasswordVisibility()
    {
        showConfirmPassword = !showConfirmPassword;
    }

    private bool ValidateModel()
    {
        FieldErrors.Clear();

        var context = new ValidationContext(Model);
        var results = new List<ValidationResult>();

        var isValid = Validator.TryValidateObject(Model, context, results, validateAllProperties: true);

        foreach (var r in results)
        {
            var members = r.MemberNames?.ToList() ?? new List<string>();
            if (members.Count == 0)
            {
                const string key = "__summary";
                if (!FieldErrors.ContainsKey(key)) FieldErrors[key] = new List<string>();
                FieldErrors[key].Add(r.ErrorMessage ?? "Validation error.");
            }
            else
            {
                foreach (var m in members)
                {
                    if (!FieldErrors.ContainsKey(m)) FieldErrors[m] = new List<string>();
                    FieldErrors[m].Add(r.ErrorMessage ?? "Validation error.");
                }
            }
        }

        return isValid;
    }

    private async Task RegisterAsync()
    {
        ErrorMessage = null;

        if (!ValidateModel())
            return;

        try
        {
            var response = await AuthApi.Register(Model);
            Nav.NavigateTo("/auth/login");
        }
        catch (Exception ex)
        {
            ErrorMessage = ex.Message;
        }
    }
}