@page "/kitchen_staff"
@layout MainLayout

@using CampusEats.Frontend.Features.Kitchen.Services
@using CampusEats.Frontend.Features.Kitchen.Models
@using CampusEats.Frontend.Services.Auth

@inject KitchenOrderApi Api
@inject AuthStateService Auth
@inject NavigationManager Nav
@inject ITokenService TokenService
@inject CustomAuthStateProvider AuthProvider

<div class="max-w-7xl mx-auto p-6 bg-gray-50 min-h-screen">

    <div class="flex justify-between items-center mb-8">
        <div>
            <h2 class="text-3xl font-bold text-gray-900 mb-2">Active Orders</h2>
            <p class="text-base text-gray-600">Manage incoming orders and update their status.</p>
        </div>

        <button @onclick="LoadOrders" class="w-12 h-12 rounded-xl border border-gray-300 bg-white hover:bg-gray-50 hover:border-gray-400 transition-all flex items-center justify-center">
            <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
            </svg>
        </button>
    </div>

    @if (isLoading)
    {
        <div class="flex justify-center items-center min-h-96">
            <div class="w-12 h-12 border-4 border-gray-300 border-t-emerald-500 rounded-full animate-spin"></div>
        </div>
    }
    else if (activeOrders.Count == 0)
    {
        <div class="bg-white rounded-2xl p-16 text-center border border-gray-200">
            <div class="text-6xl mb-4">😌</div>
            <h3 class="text-2xl font-semibold text-gray-900 mb-2">No active orders</h3>
            <p class="text-base text-gray-600">The kitchen is quiet right now.</p>
        </div>
    }
    else
    {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var order in activeOrders)
            {
                var status = order.Status.ToLower();

                <div class="bg-white rounded-2xl border border-gray-200 overflow-hidden hover:shadow-lg hover:border-gray-300 transition-all flex flex-col">

                    <div class="p-6 border-b border-gray-100 flex justify-between items-start">
                        <div>
                            <div class="flex items-center gap-3 mb-2">
                                <span class="text-lg font-bold text-gray-900">#@order.OrderId</span>
                                <span class="text-sm font-medium text-gray-600 bg-gray-100 px-3 py-1 rounded-lg">
                                    @order.CreatedAt.ToString("HH:mm")
                                </span>
                            </div>

                            <div class="text-sm text-gray-600 font-medium">@order.StudentName</div>
                        </div>

                        <span class="px-4 py-2 rounded-lg text-xs font-bold tracking-wide @GetStatusColor(status)">
                            @status.ToUpper()
                        </span>
                    </div>

                    <div class="p-6 flex-1">
                        <ul class="space-y-3">
                            @if (order.Items != null && order.Items.Any())
                            {
                                @foreach (var item in order.Items)
                                {
                                    <li class="flex items-start pb-3 border-b border-gray-100 last:border-b-0 last:pb-0">
                                        <span class="text-sm text-gray-900">
                                            <span class="font-semibold text-emerald-600">@item.Quantity x</span>
                                            @item.MenuItemName
                                        </span>
                                    </li>
                                }
                            }
                            else
                            {
                                <li class="text-sm text-gray-400 italic">No item details</li>
                            }
                            @if (!string.IsNullOrEmpty(order.Notes))
                            {
                                <li class="text-sm text-gray-900 font-medium italic">Notes: @order.Notes</li>
                            }
                        </ul>
                    </div>

                    <div class="p-6 bg-gray-50 flex justify-between items-center">
                        <div class="text-xl font-bold text-gray-900">
                            @order.TotalAmount.ToString("0.00") RON
                        </div>
                        @if (status == "paid")
                        {
                            <button class="px-5 py-2.5 bg-emerald-600 hover:bg-emerald-700 text-white font-semibold rounded-xl transition-colors flex items-center justify-center gap-2"
                                    @onclick='() => UpdateStatus(order.OrderId, "preparing")'>
                                Start Preparing🍳
                            </button>
                        }
                        else if (status == "preparing")
                        {
                            <button class="px-5 py-2.5 bg-emerald-600 hover:bg-emerald-700 text-white font-semibold rounded-xl transition-colors"
                                    @onclick='() => UpdateStatus(order.OrderId, "ready")'>
                                Mark as Ready ✓
                            </button>
                        }
                        else if (status == "ready")
                        {
                            <button class="px-5 py-2.5 bg-gray-900 hover:bg-black text-white font-semibold rounded-xl transition-colors"
                                    @onclick='() => UpdateStatus(order.OrderId, "completed")'>
                                Complete Order 📦
                            </button>
                        }

                    </div>

                </div>
            }
        </div>
    }
</div>

@code {
    private List<OrderSummaryDto> activeOrders = new List<OrderSummaryDto>();
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadOrders();
    }

    private async Task LoadOrders()
    {
        isLoading = true;

        try
        {
            activeOrders = await Api.GetActiveOrders();

            activeOrders = activeOrders
                .OrderBy(o => o.Status.ToLower() == "ready" ? 3
                    : o.Status.ToLower() == "preparing" ? 2
                    : 1)
                .ThenBy(o => o.CreatedAt)
                .ToList();
        }
        catch
        {
            activeOrders = new List<OrderSummaryDto>();
        }

        isLoading = false;
    }

    private async Task UpdateStatus(int orderId, string newStatus)
    {
        int staffId = Auth.UserId;

        if (await Api.UpdateStatus(orderId, newStatus, staffId))
        {
            await LoadOrders();
        }
    }

    private string GetStatusColor(string status) =>
        status switch
        {
            "paid" => "bg-blue-100 text-blue-800",
            "preparing" => "bg-amber-100 text-amber-800",
            "ready" => "bg-emerald-100 text-emerald-800",
            _ => "bg-gray-100 text-gray-800"
        };

}